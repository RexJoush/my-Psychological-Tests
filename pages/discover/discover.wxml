            <view class="test-container">
                <block wx:for="{{allData}}">
                    <x-findcard findcard="{{item}}"></x-findcard>
                </block>
            </view>
        </van-tab>
        <block wx:for="{{testData}}" wx:for-item="item">
            <van-tab title="{{item.category_name}}" name='{{item.category_id}}'>
                <view class="test-container">
                    <block wx:for="{{cateData}}">
                        <x-findcard findcard="{{item}}"></x-findcard>
                    </block>
                </view>
            </van-tab>
        </block>
    </van-tabs>
  </van-tab>
